package combat;

import java.io.Console;

public class Chaos {
	private int life;
	
	public Chaos() {
		life = 100;
	}
	
	public boolean receiveAttack(String attack) {
		
		if (attack == "light") {
			life -= 20;
		}
		
		else if (attack == "nature") {
			life -= 5;
		}
		
		else {
			life -= 10;
		}
		
		System.out.println("My remaining life is:");
		System.out.println(life);
		
		return (life > 0);
	}
	
	public String getPrompt() {
		
		String attack = console.readLine();
		scanner.close();
		
		return words;
	}
}
