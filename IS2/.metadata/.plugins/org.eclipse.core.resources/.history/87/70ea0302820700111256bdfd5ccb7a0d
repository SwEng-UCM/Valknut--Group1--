package combat;

public class Chaos {
	private int life;
	
	public Chaos() {
		life = 100;
	}
	
	public boolean receiveAttack(Elements attack) {

		switch(attack) {
		case LIGHT:
			life -= 20;
			
		case NATURE:
			life -= 5;
			
		case FALSEHOOD:
			life -= 10;
		};
		
		System.out.println("My remaining life is:");
		System.out.println(life);
		
		return (life > 0);
	}

}
